<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Market" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Trade 15 Resources for a conquest point"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/artifact_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginLeft="70dp"
        android:layout_toRightOf="@+id/TextView01" />

    <Spinner
        android:id="@+id/Fuel_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Material_Spinner"
        android:layout_alignLeft="@+id/Blueprint_Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView02" />

    <Spinner
        android:id="@+id/Material_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignLeft="@+id/Fuel_Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView03" />

    <Spinner
        android:id="@+id/Luxuries_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Produce_Spinner"
        android:layout_alignLeft="@+id/Material_Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView04" />

    <Spinner
        android:id="@+id/Produce_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Luxuries_Spinner"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TextView05" />

    <TextView
        android:id="@+id/totalResourceSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/Produce_Spinner"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark_orange" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_alignParentBottom="true"
        android:text="TOTAL"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginBottom="41dp"
        android:text="Produce"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView05"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_marginBottom="38dp"
        android:layout_toLeftOf="@+id/artifact_spinner"
        android:text="Luxuries"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignLeft="@+id/TextView04"
        android:layout_marginBottom="27dp"
        android:text="Materials"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView03"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_marginBottom="22dp"
        android:text="Fuel"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/TextView05"
        android:layout_marginBottom="22dp"
        android:text="Blueprints"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/Blueprint_Spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Fuel_Spinner"
        android:layout_alignLeft="@+id/artifact_spinner"
        android:layout_below="@+id/artifact_spinner" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp"
        android:text="Artifacts"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/GetPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/totalResourceSpent"
        android:layout_alignBottom="@+id/totalResourceSpent"
        android:layout_alignParentRight="true"
        android:text="Buy Point" />

</RelativeLayout>