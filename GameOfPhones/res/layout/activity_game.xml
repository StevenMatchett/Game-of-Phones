<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GameData" >

    <TextView
        android:id="@+id/players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resource_list"
        android:layout_alignTop="@+id/resource_list"
        android:background="@color/light_background"
        android:text="Players"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textviewStuffs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/resource_list"
        android:layout_alignLeft="@+id/resource_list"
        android:layout_alignRight="@+id/resource_list"
        android:background="@color/light_background"
        android:text="Resources"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/GameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ListView
        android:id="@+id/resource_list"
        android:layout_width="125dp"
        android:layout_height="336dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/light_background"
        android:divider="@color/light_highlight"
        android:dividerHeight="3dp"
        android:textAlignment="inherit" >
    </ListView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/resource_list"
        android:layout_marginRight="23dp"
        android:layout_marginTop="135dp"
        android:layout_toLeftOf="@+id/GameName" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true" >
    </LinearLayout>

    <Button
        android:id="@+id/seeOtherPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="38dp"
        android:background="@drawable/menu_button"
        android:text="See Other \nPlayers stats" />

    <Button
        android:id="@+id/See_Buildings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/seeOtherPlayers"
        android:layout_below="@+id/linearLayout1"
        android:text="Button" />

</RelativeLayout>